<Window x:Class="WPF.ControlTemplates.Example2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.ControlTemplates.Example2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Margin="10" Padding="5" Template="{StaticResource GradientButtonTemplate}">
            A Simple Button with a Custom Template
        </Button>
        <Button Margin="10" Padding="5" Template="{StaticResource GradientButtonTemplate}">
            A Second Simple Button with a Custom Template
        </Button>
        <Button Margin="10" Padding="5" IsEnabled="False" Template="{StaticResource GradientButtonTemplate}">
            A Third Simple Button with a Custom Template
        </Button>

        <Button Margin="10" Padding="5" Style="{StaticResource CustomButtonStyle}">
            A Simple Button with a Custom Template and Style
        </Button>


    </StackPanel>
</Window>
